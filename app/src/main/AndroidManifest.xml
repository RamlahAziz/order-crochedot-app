<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.naima.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewOrderActivity"
            android:label="New Orders" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.AddOrderActivity"
            android:label="Add Order" />
        <activity
            android:name=".activity.StartedActivity"
            android:label="Started Orders" />
        <activity
            android:name=".activity.AllOrderActivity"
            android:label="All Orders" />
        <activity
            android:name=".activity.CompletedActivity"
            android:label="Completed Orders" />
        <activity
            android:name=".activity.OrderDetailActivity"
            android:label="Order Description"></activity>
    </application>

</manifest>